.modal-header
  h2.text-center Complete Your Reservation
.modal-body
  .panel.panel-default
    .panel-heading
      h3.panel-title
        strong Current Reservation
    .panel-body
      .table-responsive
        table.table.table-condensed
          thead
            tr
              td
                strong Date(s)
              td.text-center
                strong Location
              td.text-center
                strong Add +1
              td.text-right
                strong Price
          tbody
            tr(ng-repeat='item in $ctrl.lineItems')
              td {{item.dateString}}
              td.text-center {{item.location}}
              td.text-center
                input(type='checkbox' ng-model='item.guest')
              td.text-right {{item.price * (item.guest ? 2 : 1) | currency : '$' : 0}}
            tr
              td.thick-line
              td.thick-line
              td.thick-line.text-center
                strong Subtotal
              td.thick-line.text-right {{$ctrl.subtotal | currency : '$' : 0}}
